<%- include('./partials/header') %>

<section class="container">
  <h1 class="large text-primary">Dashboard</h1>
  <p class="lead"><i class="fa fa-user user"></i>Welcome <%= user.name %></p>
  <div class="dash-buttons">
    <a href="/create-profile" class="btn">
      <i class="fa fa-id-card text-primary"></i>Add Profile
    </a>
    <a href="/add-experience" class="btn">
      <i class="fa fa-user-tie text-primary"></i>Add Experience
    </a>
    <a href="/add-education" class="btn">
      <i class="fa fa-graduation-cap text-primary"></i>Add Education
    </a>
    <a href="/add-post" class="btn">
      <i class="fa fa-plus text-primary"></i>Add Post
    </a>
  </div>

  <h2 class="my-2">Experience Credentials</h2>
  <table class="table">
    <thead>
      <tr>
        <th>Company</th>
        <th class="hide-sm">Title</th>
        <th class="hide-sm">Years</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% experience.map((userExp)=>{ %>
      <tr>
        <td><%= userExp.company %></td>
        <td class="hide-sm"><%= userExp.title %></td>
        <td class="hide-sm">
          <%= moment(userExp.from).format('MMMM Do YYYY') %> - <%=
          moment(userExp.to).format('MMMM Do YYYY') %>
        </td>
        <td>
          <a
            href="/delete-experience/<%= userExp._id %>"
            class="btn btn-danger"
          >
            <i class="fa fa-trash"></i>
          </a>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>

  <h2 class="my-2">Education Credentials</h2>
  <table class="table">
    <thead>
      <tr>
        <th>School</th>
        <th class="hide-sm">Degree</th>
        <th class="hide-sm">Field Of Study</th>
        <th class="hide-sm">Years</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% education.map((userEdu)=>{ %>
      <tr>
        <td><%= userEdu.school %></td>
        <td class="hide-sm"><%= userEdu.degree %></td>
        <td class="hide-sm"><%= userEdu.fieldofstudy %></td>
        <td class="hide-sm">
          <%= moment(userEdu.from).format('MMMM Do YYYY') %> - <%=
          moment(userEdu.to).format('MMMM Do YYYY') %>
        </td>
        <td>
          <a href="/delete-education/<%= userEdu._id %>" class="btn btn-danger">
            <i class="fa fa-trash"></i>
          </a>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>

  <div class="my-2">
    <a href="/delete-account" class="btn btn-danger">
      <i class="fa fa-trash delete-account"></i>Delete My Account
    </a>
  </div>
</section>

<%- include('./partials/footer') %>
